<form name='form' action="/registration" method="post">

    <table align="center" width="500" class="formTable">
        <tr>
            <td colspan="2">
                <h2 class="nameStyle">Регистрация</h2>
            </td>
        </tr>

        <tr>
            <td align="center">
                <label class="nameStyle">Логин</label>
            </td>
            <td>
                <input type="text" name="userName" class="boldSelect">
            </td>
        </tr>

        <tr>
            <td align="center">
                <label class="nameStyle">Пароль</label>
            </td>
            <td>
                <input type="password" name="password" class="boldSelect">
            </td>
        </tr>
            <input  type="hidden" name="_csrf" value="{{_csrf.token}}"/>
        <tr>
            <td colspan="2" align="center">
                <input type="submit" name="Зарегистрироваться" class="boldBtn">
            </td>
        </tr>
    </table>
</form>
